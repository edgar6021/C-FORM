@model SistemaVentas.Models.Venta

<h2>Crear Venta</h2>

<form asp-action="Create">
    <!-- Agregar campos del formulario según sea necesario -->
    <div class="form-group">
        <label asp-for="ClienteID"></label>
        <select asp-for="ClienteID" asp-items="new SelectList(ViewBag.Clientes, nameof(Cliente.ClienteID), nameof(Cliente.Nombre))" class="form-control"></select>
        <span asp-validation-for="ClienteID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Productos"></label>
        <select asp-for="Productos" asp-items="new SelectList(ViewBag.Productos, nameof(Producto.ProductoID), nameof(Producto.Nombre), Model.Productos)" multiple class="form-control"></select>
        <span asp-validation-for="Productos" class="text-danger"></span>
    </div>

    <!-- Agregar más campos según sea necesario -->

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
