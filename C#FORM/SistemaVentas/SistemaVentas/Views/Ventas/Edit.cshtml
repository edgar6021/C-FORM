@model SistemaVentas.Models.Venta

<h2>Editar Venta</h2>

<form id="editForm" method="post">
    <input type="hidden" asp-for="VentaID" />

    <!-- Campos del formulario según sea necesario -->

    <div class="form-group">
        <label asp-for="ClienteID" class="control-label">Cliente</label>
        <select asp-for="ClienteID" class="form-control">
            @foreach (var cliente in ViewBag.Clientes as List<Cliente>)
            {
                <option value="@cliente.ClienteID">@cliente.Nombre</option>
            }
        </select>
        <span asp-validation-for="ClienteID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Productos" class="control-label">Productos</label>
        <select asp-for="Productos" class="form-control" multiple>
            @foreach (var producto in ViewBag.Productos as List<Producto>)
            {
                <option value="@producto.ProductoID">@producto.Nombre - Precio: @producto.Precio</option>
            }
        </select>
        <span asp-validation-for="Productos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="button" id="guardarCambios" value="Guardar cambios" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#guardarCambios").click(function () {
                $.ajax({
                    url: "/Ventas/Edit", // Ajusta la URL según tu configuración
                    type: "POST",
                    data: $("#editForm").serialize(),
                    success: function (result) {
                        // Puedes manejar la respuesta del servidor aquí
                        location.reload(); // Recargar la página después de una edición exitosa
                    },
                    error: function (xhr, status, error) {
                        // Puedes manejar los errores aquí
                        console.error(xhr.responseText);
                    }
                });
            });
        });
    </script>
}
